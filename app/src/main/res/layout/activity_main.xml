<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#333333">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars[3]"
            android:id="@+id/imageUrl" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="57dp"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:scaleType="fitCenter"
            app:layout_constraintVertical_bias="1.0" android:adjustViewBounds="true"
    />
    <TextView
            android:text="@string/cat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginEnd="193dp" android:layout_marginRight="193dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="193dp" android:layout_marginStart="193dp" android:textSize="24sp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toTopOf="parent" android:textColor="#FFFFFF"/>
    <Button
            android:text="@string/more_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:textSize="18sp"
            android:paddingLeft="90sp" android:paddingRight="90sp" android:paddingTop="15sp"
            android:paddingBottom="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="121dp" android:layout_marginRight="121dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="121dp"
            android:layout_marginStart="121dp" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#000000"
            android:onClick="setCatPhoto" android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
</androidx.constraintlayout.widget.ConstraintLayout>